<body>
    <h1>Random Number Picker</h1>
    <p>Enter a number to get a random number between 1 and your input.</p>
    <input type="number" id="maxNumber" placeholder="Enter a number" min="1">
    <button id="submitButton" onclick="generateRandomNumber()">Submit</button>
    <br><br>
    
    <div class="result" id="result"></div>

    <script>
        function generateRandomNumber() {
            const maxNumber = document.getElementById("maxNumber").value;
            const resultElement = document.getElementById("result");

            // Generate random number and display result
            if (maxNumber && maxNumber > 0) {
                const randomNumber = Math.floor(Math.random() * maxNumber) + 1;
                resultElement.textContent = `Random number: ${randomNumber}`;

                // Add animation to the result text
                resultElement.classList.add("animateResult");

                // Remove the animation after 3 seconds
                setTimeout(() => {
                    resultElement.classList.remove("animateResult");
                }, 3000);
            } else {
                resultElement.textContent = "Please enter a valid number greater than 0.";
            }
        }
    </script>
</body>
