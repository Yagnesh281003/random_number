        @keyframes glowEffect {
            0% {
                text-shadow: 0 0 5px #ffffff, 0 0 10px #ffffff, 0 0 15px #ffffff;
            }
            50% {
                text-shadow: 0 0 25px #ff6600, 0 0 50px #ff6600, 0 0 75px #ff6600;
